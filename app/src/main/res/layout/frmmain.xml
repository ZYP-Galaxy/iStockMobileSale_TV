<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2C3B46"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="84dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cardlogout"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:padding="10dp"
                app:srcCompat="@drawable/logout" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lmenu"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <TableLayout
            android:layout_width="350dp"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardsale"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/sale"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="6dp"
                    app:cardMaxElevation="10dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Sale"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/cart"
                            android:padding="10dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardsalelist"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/saleenq"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="6dp"
                    app:cardMaxElevation="10dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/salelist"
                            android:padding="10dp" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Sale History"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardsaleorder"
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/saleorder"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="6dp"
                    app:cardMaxElevation="10dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="86dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Sale Order"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/cart"
                            android:padding="10dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardsaleorderlist"
                    android:layout_width="237dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/saleorderenq"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="6dp"
                    app:cardMaxElevation="10dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/salelist"
                            android:padding="10dp" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Sale Order List"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardStockstatuslist"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/stock"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="6dp"
                    app:cardMaxElevation="10dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Check Balance"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/cart"
                            android:padding="10dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOutstandlist"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="@color/outstand"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="6dp"
                    app:cardMaxElevation="10dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/salelist"
                            android:padding="10dp" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Outstand"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSetting"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/setting"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="6dp"
                    app:cardMaxElevation="10dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/salelist"
                            android:padding="10dp" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Settings"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </TableRow>
        </TableLayout>
    </LinearLayout>



</RelativeLayout>
