<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frmlogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnSetting"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableTop="@drawable/ic_print_black_24dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnBT"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:drawableTop="@drawable/btconnect"
                android:text="BT Printer"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btnconnect"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableTop="@drawable/wifidis"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:drawableTop="@drawable/dataupload"
                android:text="Upload"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btnposdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_toLeftOf="@+id/btnRegister"
                android:background="@null"
                android:drawableTop="@drawable/datadownload"
                android:text="Download"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableTop="@drawable/register"
                android:text="Register"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextClock
                android:id="@+id/textClock"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:format12Hour="hh:mm:ss a"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_exit"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:drawableTop="@drawable/ic_exit"
                android:drawableTint="@color/white"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!--                    <com.google.android.material.textfield.TextInputLayout-->
                    <!--                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:textColorHint="@color/black"-->
                    <!--                        app:boxStrokeColor="@color/black"-->
                    <!--                        app:hintTextAppearance="@style/FloatingText">-->

                    <!--                    </com.google.android.material.textfield.TextInputLayout>-->

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/usericon" />

                    <EditText
                        android:id="@+id/useredit"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="User"
                        android:imeOptions="actionDone|flagNoExtractUi"
                        android:inputType=""
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/colorGray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!--                    <com.google.android.material.textfield.TextInputLayout-->
                    <!--                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:textColorHint="@color/black"-->
                    <!--                        app:boxStrokeColor="@color/black"-->
                    <!--                        app:errorEnabled="true"-->
                    <!--                        app:hintTextAppearance="@style/FloatingText">-->

                    <!--                    </com.google.android.material.textfield.TextInputLayout>-->

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/passwordicon" />

                    <EditText
                        android:id="@+id/passedit"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input"
                        android:ems="10"
                        android:hint="Password"
                        android:imeOptions="actionDone|flagNoExtractUi"
                        android:inputType="textPassword"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/colorGray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="50dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/login"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/bg_button"
                        android:text="LOGIN"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <!--android:background="#6960EF"-->

                    <TextView
                        android:id="@+id/btn_register_setup"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="@string/register"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/exit"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/shape"
                        android:text="Exit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="gone" />
                    <!--android:background="#01D5AD"-->
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>