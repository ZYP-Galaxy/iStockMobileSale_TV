<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2F4658"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageButton
            android:id="@+id/imgOK"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@color/colorPrimary"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:srcCompat="@drawable/searchtablet" />

        <ImageButton
            android:id="@+id/imgFilterCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgOK"
            android:background="@null"
            android:textAllCaps="false"
            android:textColor="#111"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:srcCompat="@drawable/filtertablet" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/imgFilterCode"
            android:textColorHint="@color/whitesmoke"
            app:boxStrokeColor="@color/white">

            <EditText
                android:id="@+id/etdSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search"
                android:textColor="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>
</LinearLayout>


