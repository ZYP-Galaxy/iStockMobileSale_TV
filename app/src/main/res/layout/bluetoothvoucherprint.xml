<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/vou_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtcompanyname"
                style="@style/voucher_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="CompanyName"
                android:textAlignment="center"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtheaderline1"
                style="@style/voucher_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Header1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txtheaderline2"
                style="@style/voucher_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Header2"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txtheaderline3"
                style="@style/voucher_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Header3"
                android:textAlignment="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="5dp"
                android:background="@android:color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/voucher_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="InvoiceNo" />

                <TextView
                    style="@style/voucher_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView
                    android:id="@+id/txtinvoice"
                    style="@style/voucher_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tzw001" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/voucher_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Date" />

                <TextView
                    style="@style/voucher_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView
                    android:id="@+id/txtdate"
                    style="@style/voucher_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20/12/2020" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/voucher_text"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Customer" />

                <TextView
                    style="@style/voucher_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : " />

                <TextView
                    android:id="@+id/txtcustomer"
                    style="@style/voucher_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="5dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/voucher_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Description" />

                <TextView
                    style="@style/voucher_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingHorizontal="5dp"
                    android:text="Amount" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/priceqty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="5dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    style="@style/voucher_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total" />

                <TextView
                    android:id="@+id/txttotalamount"
                    style="@style/voucher_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingHorizontal="5dp"
                    android:text="1000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    style="@style/voucher_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discount" />

                <TextView
                    android:id="@+id/txttotaldisamount"
                    style="@style/voucher_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingHorizontal="5dp"
                    android:text="1000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    style="@style/voucher_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Foc" />

                <TextView
                    android:id="@+id/txttotalfocamount"
                    style="@style/voucher_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingHorizontal="5dp"
                    android:text="1000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/voucher_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Net Amount"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtnetamount"
                    style="@style/voucher_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingHorizontal="5dp"
                    android:text="1000"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtfooterline1"
                style="@style/voucher_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Footer1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txtfooterline2"
                style="@style/voucher_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Footer2"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txtfooterline3"
                style="@style/voucher_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Footer3"
                android:textAlignment="center" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>