<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="false"
    android:background="#d9d4d4"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2F4658">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/custadd"
            android:layout_centerVertical="true"
            android:background="@null"
            app:srcCompat="@drawable/custadd"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/imgSave"/>

        <ImageButton
            android:id="@+id/imgAddCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            app:srcCompat="@drawable/editsave" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="500dp"
        app:cardBackgroundColor="#d9d4d4">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Customer Name"
                        android:textColor="#46509E"
                        android:textStyle="bold"
                        android:textSize="14dp"/>
                    <EditText
                        android:layout_width="185dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:hint="Enter Customer Name"
                        android:textColorHint="#fff"
                        android:textColor="@color/white"
                        android:id="@+id/txtCustomerName"
                        android:layout_height="35dp"
                        android:textSize="15dp"
                        android:background="@drawable/txtinvoice"
                        android:textStyle="bold"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Customer Code"
                        android:textColor="#46509E"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                    <EditText
                        android:layout_width="185dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:hint="Enter Customer Code"
                        android:textColorHint="#fff"
                        android:textColor="@color/white"
                        android:id="@+id/txtCustomerCode"
                        android:layout_height="35dp"
                        android:textSize="15dp"
                        android:background="@drawable/txtinvoice"
                        android:textStyle="bold"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rlCustGroup"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Customer Group"
                        android:textColor="#46509E"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                    <Button
                        android:layout_width="185dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/btnCustGroup"
                        android:layout_height="40dp"
                        android:background="@drawable/entrybtn"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textAllCaps="false"
                        android:text="Choose"
                        />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rlTownship"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Township"
                        android:textColor="#46509E"
                        android:textStyle="bold"
                        android:textSize="15dp"/>
                    <Button
                        android:layout_width="185dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textAllCaps="false"
                        android:text="Choose"
                        android:layout_height="40dp"
                        android:background="@drawable/entrybtn"
                        android:textColor="@color/white"
                        android:id="@+id/btnTownship"
                        android:textSize="15dp"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rlCredit"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="Credit"
                        android:textColor="#46509E"
                        android:textStyle="bold"
                        android:textSize="15dp"/>

                    <RelativeLayout
                    android:layout_width="185dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="40dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <CheckBox
                                android:layout_centerVertical="true"
                                android:id="@+id/chkCredit"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp">

                            </CheckBox>

                            <EditText
                                android:layout_width="185dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:hint="Enter DueDay"
                                android:textColorHint="#fff"
                                android:textColor="@color/white"
                                android:id="@+id/txtdue"
                                android:layout_height="35dp"
                                android:textSize="15dp"
                                android:background="@drawable/txtinvoice"
                                android:visibility="gone"
                                android:textStyle="bold"
                                />
                        </LinearLayout>



                    </RelativeLayout>



                </RelativeLayout>



            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>


</LinearLayout>