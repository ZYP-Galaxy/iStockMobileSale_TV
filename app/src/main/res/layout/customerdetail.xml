<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="450dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="false"
    android:background="@color/headerinfo"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/headerbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Customer Setup"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>
        <ImageButton
            android:id="@+id/imgAddCustomer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="75dp"
            android:background="@drawable/save" />
        <ImageButton
            android:id="@+id/imgback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/back" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="500dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/headerinfo"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:text="Customer Name"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14dp"/>
                    <EditText
                        android:layout_width="185dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:hint="Enter Name"
                        android:textColorHint="#3E504B4B"
                        android:textColor="@color/white"
                        android:id="@+id/txtCustomerName"
                        android:layout_height="35dp"
                        android:textSize="12dp"
                        android:background="@color/headertext"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rlCustGroup"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:text="Customer Group"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14dp"/>
                    <Button
                        android:layout_width="185dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/btnCustGroup"
                        android:layout_height="40dp"
                        android:background="@color/headertext"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textAllCaps="false"
                        android:text="Merchant"
                        android:textAlignment="textStart"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rlTownship"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:text="Township"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14dp"/>
                    <Button
                        android:layout_width="185dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textAllCaps="false"
                        android:text="Yangon"
                        android:layout_height="40dp"
                        android:background="@color/headertext"
                        android:textColor="#000000"
                        android:id="@+id/btnTownship"
                        android:textSize="15dp"
                        android:textAlignment="textStart"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rlCredit"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:text="Credit"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14dp"/>

                    <RelativeLayout
                    android:layout_width="185dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="40dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <Switch
                                android:id="@+id/credit"
                                android:layout_width="50dp"
                                android:layout_height="10dp"/>

                            <EditText
                                android:id="@+id/txtdue"
                                android:layout_width="135dp"
                                android:layout_height="35dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@color/headertext"
                                android:hint="Enter DueDay"
                                android:textColor="@color/white"
                                android:textColorHint="#4A000000"
                                android:textSize="12dp"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>