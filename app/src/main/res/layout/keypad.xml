<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/keypadbg">

            <TextView
                android:id="@+id/txtNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold"

                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/txt7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="7"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />

                <Button
                    android:id="@+id/txt8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="8"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />

                <Button
                    android:id="@+id/txt9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="9"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/txt4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="4"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />

                <Button
                    android:id="@+id/txt5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="5"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />

                <Button
                    android:id="@+id/txt6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="6"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/txt1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />

                <Button
                    android:id="@+id/txt2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="2"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />

                <Button
                    android:id="@+id/txt3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="3"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/txt0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />

                <Button
                    android:id="@+id/txtdec"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="."
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />

                <Button
                    android:id="@+id/txtc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="C"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnpercent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="%"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:visibility="gone"


                    />

                <Button
                    android:id="@+id/txtdel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="DEL"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />

                <Button
                    android:id="@+id/txtenter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keypadbg"
                    android:text="OK"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"


                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>