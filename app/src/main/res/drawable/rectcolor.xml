<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="1dip" android:color="#caf0f4" />
            <gradient android:angle="-90" android:startColor="#610583" android:endColor="#2f8eb3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#f1d0f5" />
            <solid android:color="#f1d0f5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dp" />
            <stroke android:width="1dip" android:color="#caf0f4" />
            <gradient android:angle="-90" android:startColor="#2f8eb3" android:endColor="#610583" />
        </shape>
    </item>
</selector>